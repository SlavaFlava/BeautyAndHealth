{{ 'baner-section.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }}{
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
  }
  #shopify-section-{{ section.id }} .baner-section {
    min-height: {{ section.settings.min_height }}px;
  }
  #shopify-section-{{ section.id }} .baner-section__content {
    color: {{ section.settings.content_color }};
  }
</style>

<div class="baner-section">
<img
    src="{{ section.settings.image | img_url: 'master' }}"
    alt="{{ section.settings.title }}"
    class="baner-section__bg">
  <div class="baner-section__content">
    <h2 class="baner-section__title baner-section__title--uppercase">{{ section.settings.title }}</h2>
    <div class="baner-section__subtitle">
      {{ section.settings.subtitle }}
    </div> 
  </div>
</div>

{% schema %}
  {
    "name": "Baner",
    "settings": [
      {
        "type": "range",
        "id": "min_height",
        "min": 400,
        "max": 800,
        "step": 10,
        "label": "Baner Height",
        "default": 500
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 1,
        "label": "Margin Top",
        "default": 20
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "label": "Margin Bottom",
        "default": 20
      },
      {
        "type": "color",
        "id": "content_color",
        "label": "Content Color",
        "default": "#fff"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "subtitle",
        "label": "SubTitle"
      }, {
        "type": "image_picker",
        "id": "image",
        "label": "Image",
        "info": "Size Recommended 1920x850"
      }
    ],
    "presets": [
      {
        "name": "Baner"
      }
    ]
  }
{% endschema %} 